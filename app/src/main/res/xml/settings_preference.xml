<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings_info_retrieval">
        <Preference
            android:title="@string/settings_web_services_title"
            android:key="settings_pref_web_services"
            android:persistent="false" />
        <SwitchPreference
            android:title="@string/settings_auto_complete_website_title"
            android:key="settings_pref_acwebsite"
            android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_backup_category">
        <Preference
            android:title="@string/settings_backup_title"
            android:key="settings_pref_backup" />
        <Preference
            android:title="@string/settings_restore_title"
            android:key="settings_pref_restore" />
        <Preference
            android:title="@string/settings_export_to_csv_title"
            android:summary="@string/settings_export_to_csv_summary"
            android:key="settings_pref_export_to_csv" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_general">
        <SwitchPreference
            android:title="@string/settings_check_update_title"
            android:key="settings_pref_check_update"
            android:defaultValue="0"/>
    </PreferenceCategory>

</PreferenceScreen>